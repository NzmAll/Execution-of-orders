 <!-- Begin Main Content Area -->
<main class="main-content">
    @Html.Partial(
    "Partials/_BreadcrumbPartial",
    new BreadcrumbViewModel("orders page", "orders"));

    <div class="account-page-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <partial name="Partials/_SidebarMenuPartial" />
                </div>

                <div class="col-lg-9">
                    <div class="myaccount-orders">
                        <h4 class="small-title">MY ORDERS</h4>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <tbody>
                                    <tr>
                                        <th>ORDER</th>
                                        <th>DATE</th>
                                        <th>STATUS</th>
                                        <th>TOTAL</th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a class="account-order-id" href="#">#5364</a>
                                        </td>
                                        <td>Mar 27, 2019</td>
                                        <td>On Hold</td>
                                        <td>$162.00 for 2 items</td>
                                        <td>
                                            <a href="#" class="btn btn-dark"><span>View</span></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a class="account-order-id" href="#">#5356</a>
                                        </td>
                                        <td>Mar 27, 2019</td>
                                        <td>On Hold</td>
                                        <td>$162.00 for 2 items</td>
                                        <td>
                                            <a href="#" class="btn btn-dark"><span>View</span></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h2>Sifarişlərim</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Sifariş No</th>
                    <th>Verilmə Tarixi</th>
                    <th>Status</th>
                    <th>Cəmi Məbləğ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.OrderDate.ToShortDateString()</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td><a href="@Url.Action("ViewOrder", new { orderId = order.Id })">Məhsullara bax</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button id="showProductsButton" class="btn btn-primary">Məhsullara bax</button>

    <script>
        $('#showProductsButton').click(function () {
            var productsHtml = ""; 
            var total = 0; 

            $('.modal-body').html(productsHtml);
            $('#totalPrice').text(total);

            $('#productsModal').modal('show');
        });

    </script>

</main>
<!-- Main Content Area End Here -->